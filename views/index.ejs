<!DOCTYPE html>
<html lang="en">

<head>

    <%- include ('head') %>

</head>

<body>





    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nova Resposta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>

                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Resposta: </label>
                            <textarea name="awnanser" required class="form-control" id="message-text"></textarea>
                            <input id="keyanswer" name="keyanswer" value="" hidden>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="sentAnswer" class="btn btn-outline-info">Enviar resposta</button>
                </div>
            </div>
        </div>
    </div>









    <table class="table table-success table-striped w-50 container mt-5 shadow">
        <thead>
            <tr>
                <th scope="col">Pergunta</th>
                <th></th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <% perguntas.forEach((pergunta)=>{ %>
                   
                    
                    <td class="shadow">
                        <%= pergunta.descricao %>
                    </td>
                    <td>
                        <button id=" <%= pergunta.id %>" type="button" class="btn btn-outline-success shadow"
                            data-bs-toggle="modal" data-bs-target="#exampleModal"
                            data-bs-whatever="@getbootstrap">Responder</button>


                    </td>

            </tr>

            
                <% result.forEach((answer)=>{ %>
                    <tr>

                <% if (answer.idAsk == pergunta.id )  {%>
                <td>
                    <!-- Example Code -->

                    <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <svg class="bd-placeholder-img rounded me-2" width="20" height="20"
                                xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                                preserveAspectRatio="xMidYMid slice" focusable="false">
                                <rect width="100%" height="100%" fill="#007aff"></rect>
                            </svg>

                            <strong class="me-auto">Resposta</strong>
                            <small>11 mins ago</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            <%= answer.answer %>
                        </div>
                    </div>

                    <!-- End Example Code -->
                </td>
                <td></td>

                <% } %>
            </tr>
                <% }); %>
               



            
            <% }); %>



        </tbody>

    </table>





</body>


<%- include ('footer') %>

</html>